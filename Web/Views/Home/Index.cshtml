@model dynamic
@{
    Layout = null;
}

<html>
<head>
    <title>SOClose Vote Tracker</title>
    
</head>
<body>
    <input id="questionIdInput" type="text" />
    <a id="btnSubmit" href="javascript:void(0);">Submit</a>

    <script src="https://code.jquery.com/jquery-2.2.2.min.js" integrity="sha256-36cp2Co+/62rEAAYHLmRCPIych47CvdM+uTBJwSzWjI=" crossorigin="anonymous"></script>
<script type="text/javascript">
    $(function() {
        $('#btnSubmit').click(function() {
            var questionIdStr = $('#questionIdInput').val();
            var questionIds = questionIdStr.split(",");
            $.post('/Home/Poll', { questionIds: questionIds }, function() {
                location.reload();
            });
        });
    });
</script>
</body>
</html>
